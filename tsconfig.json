/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "strictNullChecks": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@environment": [
        "src/environments/environment"
      ],
      "@common/state": [
        "src/app/common/state/index.ts"
      ],
      "@common/translate": [
        "src/app/common/translate/index.ts"
      ],
      "@common/validators": [
        "src/app/common/validators/index.ts"
      ],
      "@common/services": [
        "src/app/common/services/index.ts"
      ],
      "@common/components": [
        "src/app/common/components/index.ts"
      ],
      "@common/directives": [
        "src/app/common/directives/index.ts"
      ],
      "@common/pipes": [
        "src/app/common/pipes/index.ts"
      ],
      "@common/base": [
        "src/app/common/base/index.ts"
      ],
      "@common/schemas": [
        "src/app/common/schemas/index.ts"
      ],
      "@app-state": [
        "src/app/app.state.ts"
      ],
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
